  <% if(locals.posts){ %>
    <h1>Welcome to upload details</h1>
    <hr>
    <br>
    <div class="uploadDiv">
      <% posts.forEach(post => { %>
        <div class="myCard">
              <strong><%= post.username %></strong> 
              <hr>
              <p>" <%= post.bio %> "</p>
              <p> <%= post.date %> </p>
              <hr>
              <div>
                <a class="btn btn-primary" href="/post/view/<%= post.id %>"> view </a>                
